
<h1>Golf Scores</h1>
<table>
  <thead>
    <tr>
    
      <th>Owner</th>
      <th> Score </th>
      <th> Thru </th>
    </tr>
  </thead>
  <tbody>
  <% @teams.sort_by{|row| row[2].to_i}.each do |row| %>
    <tr>
      <td><%= row[1] %></td> <!-- Owner -->
      <td><%= row[2] %></td> <!-- Total Score-->
      <td><%= row[3] %></td> <!-- Thru-->

    </tr>
  <% end %>
  </tbody>
</table>
<table>
  <thead>
    <tr>
      <th>Player Name</th>
      <th>Score</th>
      <th>Today</th>
      <th>Thru</th>
    </tr>
  </thead>
  <tbody>
  <% @scores.each do |row| %>
    <tr>
      <td><%= row[1] %></td> <!-- player_name -->
      <td><%= row[2] %></td> <!-- score -->
      <td><%= row[3] %></td> <!-- today -->
      <td><%= row[4] %></td> <!-- thru -->
    </tr>
  <% end %>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Team</th>
    </tr>
  </thead>
  <tbody>
  <% @team_assignments.each do |row| %>
    <tr>
      <td><%= row[1] %></td> <!-- player_name -->
      <td><%= row[2] %></td> <!-- team_number -->

    </tr>
  <% end %>
  </tbody>
</table>